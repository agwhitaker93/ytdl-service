---
const navElements = {
  Channels: "/channels",
  Playlists: "/playlists",
  Jobs: "/jobs",
  Config: "/config",
};
---

<div class="navbar bg-base-100">
  <div class="flex-1">
		<a class="btn btn-ghost text-xl" href="/">Home</a>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      {
        Object.entries(navElements).map(([name, path]) => (
          <li>
            <a href={path}>{name}</a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
